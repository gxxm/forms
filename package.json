{
  "name": "ROTM",
  "version": "0.0.0",
  "main": "app.js",
  "description": "A Home Office application for reporting online terrorist material.",
  "license": "GPLv2",
  "scripts": {
    "start": "npm run hof-transpile && node .",
    "stop": "pkill --signal SIGINT rtm",
    "dev": "NODE_ENV=development nodemon -e html,js,json app.js",
    "watch": "parallelshell 'npm run watch:scss' 'npm run watch:js'",
    "watch:scss": "nodemon -e scss -x 'npm run sass'",
    "watch:js": "nodemon --watch assets/js -e js -x 'npm run browserify'",
    "test": "NODE_ENV=test mocha",
    "browserify": "browserify ./so-forms/assets/js/index.js > ./public/js/bundle.js",
    "test:acceptance": "cd acceptance_tests/; bundle install && cucumber",
    "test:ci": "npm run lint && npm run style && npm run test",
    "lint": "eslint .",
    "copy:images": "cp -r ./assets/images ./public/",
    "style": "jscs -e **/*.js --config=./.jscsrc.json",
    "quality": "plato -r -x 'node_modules|reports|test' -d reports/plato .",
    "sass": "./node_modules/node-sass/bin/node-sass ./assets/scss/app.scss ./public/css/app.css --include-path ./node_modules",
    "create:public": "mkdir -p ./public/js ./public/css ./public/images",
    "hof-transpile": "hof-transpiler ./apps/**/translations/src -w --shared ./so-forms/translations/src",
    "postinstall": "npm run create:public; npm run sass; npm run browserify; npm run copy:images; npm run hof-transpile"
  },
  "author": "HomeOffice",
  "dependencies": {
    "body-parser": "^1.13.0",
    "browserify": "^12.0.1",
    "churchill": "0.0.5",
    "connect-redis-crypto": "^2.1.0",
    "cookie-parser": "^1.3.5",
    "express": "^4.12.4",
    "express-partial-templates": "^0.1.0",
    "express-session": "^1.11.3",
    "hmpo-form-wizard": "^4.0.0",
    "hmpo-frontend-toolkit": "^2.0.0",
    "hmpo-govuk-template": "0.0.3",
    "hmpo-model": "^0.2.0",
    "hmpo-template-mixins": "^3.6.0",
    "hogan-express-strict": "^0.5.4",
    "hogan.js": "^3.0.2",
    "i18n-future": "^0.2.0",
    "i18n-lookup": "^0.1.0",
    "jquery": "^2.1.4",
    "lodash": "^4.5.1",
    "moment": "^2.10.3",
    "moment-business": "^2.0.0",
    "node-sass": "^3.2.0",
    "nodemailer": "^1.4.0",
    "nodemailer-smtp-transport": "^1.0.3",
    "nodemailer-stub-transport": "^1.0.0",
    "redis": "^0.12.1",
    "serve-static": "^1.10.0",
    "typeahead.js-browserify": "^1.0.5",
    "underscore": "^1.8.3",
    "winston": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "debug": "^2.2.0",
    "eslint": "^0.23.0",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-mocha": "^0.2.2",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "hof-transpiler": "0.0.4",
    "jscs": "^1.13.1",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "node-uuid": "^1.4.7",
    "parallelshell": "^1.1.1",
    "plato": "^1.5.0",
    "pre-commit": "^1.0.10",
    "proxyquire": "^1.5.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0"
  },
  "pre-commit": [
    "lint",
    "style",
    "test"
  ]
}
